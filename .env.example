# Search Engine Scraping System Configuration
# Copy this file to .env and customize

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# =============================================================================
# RATE LIMITING (supports 50+ requests per minute)
# =============================================================================
MAX_SEARCH_REQUESTS_PER_MINUTE=100
MAX_WEBSITE_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=100

# =============================================================================
# REDIS (for rate limiting and caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================
USE_PROXY=true
PROXY_ROTATION=true
PROXY_TIMEOUT=15
AUTO_FETCH_PROXIES=true

# =============================================================================
# REQUEST SETTINGS (optimized for speed)
# =============================================================================
REQUEST_TIMEOUT=15
MAX_RETRIES=2
# Note: RETRY_DELAY supports decimal values (e.g., 0.5 for 500ms)
RETRY_DELAY=0.5

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
DEFAULT_SEARCH_ENGINE=google
ENABLE_FALLBACK=true
CACHE_RESULTS=true
CACHE_TTL=300

# =============================================================================
# BROWSER/SCRAPING SETTINGS
# =============================================================================
JAVASCRIPT_RENDERING=true
BROWSER_HEADLESS=true
PAGE_LOAD_TIMEOUT=15

# =============================================================================
# CAPTCHA SOLVING
# The system includes a powerful LOCAL captcha solver that works without
# external APIs. For best results, the local solver handles:
# - Image captchas (OCR-based)
# - reCAPTCHA v2/v3 (checkbox + audio challenge)
# - Cloudflare challenges (auto-bypass)
# - hCaptcha (checkbox method)
#
# Optional: For enhanced solving, add API keys from paid services:
# =============================================================================
ENABLE_CAPTCHA_SOLVER=true
CAPTCHA_TIMEOUT=120

# 2Captcha (https://2captcha.com/) - Optional
TWOCAPTCHA_API_KEY=

# Anti-Captcha (https://anti-captcha.com/) - Optional
ANTICAPTCHA_API_KEY=

# CapMonster (https://capmonster.cloud/) - Optional
CAPMONSTER_API_KEY=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log
