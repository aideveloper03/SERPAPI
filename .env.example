# ================================================================
# Advanced Search Engine Scraping System - Configuration
# ================================================================
# Copy this file to .env and customize as needed

# ================================================================
# API Configuration
# ================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=False

# ================================================================
# Rate Limiting (Optimized for 50+ req/min)
# ================================================================
MAX_SEARCH_REQUESTS_PER_MINUTE=120
MAX_WEBSITE_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=100
CONNECTION_POOL_SIZE=100

# ================================================================
# Redis Configuration (Optional - for rate limiting)
# ================================================================
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ================================================================
# Proxy Configuration
# ================================================================
# Enable proxy rotation
USE_PROXY=true
PROXY_ROTATION=true
PROXY_TIMEOUT=10

# Auto-fetch free proxies from public sources
AUTO_FETCH_PROXIES=true
PROXY_FETCH_INTERVAL=300
MIN_WORKING_PROXIES=10

# Custom proxies (comma-separated)
# Supports: http, https, socks4, socks5
# Example: http://proxy1:8080,socks5://user:pass@proxy2:1080
CUSTOM_PROXIES=

# ================================================================
# Captcha Solving
# ================================================================
ENABLE_CAPTCHA_SOLVER=true
CAPTCHA_TIMEOUT=30
CAPTCHA_MAX_RETRIES=3

# ================================================================
# Request Configuration (Optimized for speed)
# ================================================================
REQUEST_TIMEOUT=15
MAX_RETRIES=2
RETRY_DELAY=0.5

# ================================================================
# Browser/Scraping Configuration
# ================================================================
JAVASCRIPT_RENDERING=true
BROWSER_HEADLESS=true
PAGE_LOAD_TIMEOUT=15

# ================================================================
# Search Engine Fallback
# ================================================================
# Enable automatic fallback when one engine fails
ENABLE_FALLBACK=true

# Order of engines to try (comma-separated)
FALLBACK_ORDER=google,duckduckgo,bing,yahoo

# ================================================================
# Anti-Detection
# ================================================================
# Randomize browser fingerprints for each request batch
RANDOMIZE_FINGERPRINT=true

# ================================================================
# Logging
# ================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log
